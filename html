  <!-- INÍCIO DO JAVASCRIPT REUTILIZÁVEL -->
  <script>
    // ===== FUNÇÕES DE EXEMPLO =====
    function exemploAcao() {
      alert('Ação principal executada!');
    }

    function exemploAcaoSecundaria() {
      alert('Ação secundária executada!');
    }

    // ===== FUNÇÃO PARA VALIDAÇÃO =====
    function validarCampo(campoId) {
      const campo = document.getElementById(campoId);
      const erro = document.getElementById(`${campoId}-error`);
      
      if (!campo.value.trim()) {
        if (erro) erro.style.display = 'block';
        campo.style.borderColor = '#d32f2f';
        return false;
      } else {
        if (erro) erro.style.display = 'none';
        campo.style.borderColor = '#4caf50';
        return true;
      }
    }

    // ===== FUNÇÃO PARA FORMATAÇÃO =====
    function formatarTexto(texto) {
      return texto.toUpperCase().trim();
    }

    // ===== FUNÇÃO PARA COPIAR TEXTO =====
    function copiarTexto(texto) {
      const textarea = document.createElement('textarea');
      textarea.value = texto;
      document.body.appendChild(textarea);
      textarea.select();
      document.execCommand('copy');
      document.body.removeChild(textarea);
      
      // Feedback visual
      const btn = event.target;
      const originalText = btn.innerHTML;
      btn.innerHTML = '<i class="fas fa-check"></i> Copiado!';
      setTimeout(() => {
        btn.innerHTML = originalText;
      }, 2000);
    }

    // ===== FUNÇÃO PARA MOSTRAR/ESCONDER ELEMENTOS =====
    function mostrarElemento(id) {
      document.getElementById(id).classList.remove('hidden');
    }

    function esconderElemento(id) {
      document.getElementById(id).classList.add('hidden');
    }

    // ===== FUNÇÃO PARA ALTERNAR ENTRE ABAS =====
    function alternarAba(abaAtiva, prefixo = 'aba') {
      // Esconde todas as abas
      document.querySelectorAll(`[id^="${prefixo}"]`).forEach(aba => {
        aba.classList.add('hidden');
      });
      // Mostra apenas a aba ativa
      document.getElementById(`${prefixo}${abaAtiva}`).classList.remove('hidden');
    }
  </script>
  <!-- FIM DO JAVASCRIPT REUTILIZÁVEL -->
