            { node: "NOVA DIVISÃO", area: "Zona Sul", quebra: "Setor J", nova_divisao: "Nova Zona 5", operadora: "Vivo", contrato: "CT2024010", bairro: "Botafogo", cep: "22250-000", status: "Ativo" }
        ];

        // Navegação entre páginas
        document.querySelectorAll('.nav-link-verde, .card-verde[data-pagina]').forEach(elemento => {
            elemento.addEventListener('click', function() {
                const paginaId = this.getAttribute('data-pagina') || 'dashboard';
                
                // Atualizar navegação
                document.querySelectorAll('.nav-link-verde').forEach(link => {
                    link.classList.remove('ativo');
                });
                this.classList.add('ativo');
                
                // Mostrar página selecionada
                document.querySelectorAll('.pagina').forEach(pagina => {
                    pagina.classList.add('oculto');
                });
                document.getElementById(paginaId).classList.remove('oculto');
            });
        });

        // Consulta Rápida
        document.getElementById('botao-consulta').addEventListener('click', realizarConsulta);
        document.getElementById('entrada-consulta').addEventListener('keypress', function(e) {
            if (e.key === 'Enter') realizarConsulta();
        });

        // Histórico de consultas
        document.querySelectorAll('.tag-consulta').forEach(tag => {
            tag.addEventListener('click', function() {
                document.getElementById('entrada-consulta').value = this.textContent;
                realizarConsulta();
            });
        });

        function realizarConsulta() {
            const termo = document.getElementById('entrada-consulta').value.trim().toUpperCase();
            if (!termo) return;

            const resultado = baseDados.find(item => 
                item.node === termo || 
                item.area.toUpperCase().includes(termo) ||
                item.nova_divisao.toUpperCase().includes(termo)
            );

            if (resultado) {
                document.getElementById('resultado-area').textContent = resultado.area;
                document.getElementById('resultado-quebra').textContent = resultado.quebra;
                document.getElementById('resultado-nova-divisao').textContent = resultado.nova_divisao;
                
                // Adicionar ao histórico se não existir
                const historicoConsultas = document.getElementById('historico-consultas');
                const tagsExistentes = Array.from(historicoConsultas.querySelectorAll('.tag-consulta'))
                    .map(tag => tag.textContent);
                
                if (!tagsExistentes.includes(termo)) {
                    const novaTag = document.createElement('div');
                    novaTag.className = 'tag-consulta';
                    novaTag.textContent = termo;
                    novaTag.addEventListener('click', function() {
                        document.getElementById('entrada-consulta').value = this.textContent;
                        realizarConsulta();
                    });
                    historicoConsultas.appendChild(novaTag);
                }
            } else {
                document.getElementById('resultado-area').textContent = 'Não encontrado';
                document.getElementById('resultado-quebra').textContent = 'Não encontrado';
                document.getElementById('resultado-nova-divisao').textContent = 'Não encontrado';
            }
        }

        // Preencher tabela de análise
        function preencherTabela(dados = baseDados) {
            const corpoTabela = document.getElementById('corpo-tabela');
            corpoTabela.innerHTML = '';
            
            dados.forEach(item => {
                const tr = document.createElement('tr');
                
                // Definir classe de status
                let classeStatus = 'status-ativo';
                let textoStatus = 'Ativo';
                if (item.status === 'Manutenção') {
                    classeStatus = 'status-inativo';
                    textoStatus = 'Manutenção';
                }
                
                tr.innerHTML = `
                    <td>${item.node}</td>
                    <td>${item.area}</td>
                    <td>${item.operadora}</td>
                    <td>${item.contrato}</td>
                    <td>${item.bairro}</td>
                    <td>
                        <span class="indicador-status ${classeStatus}"></span>
                        ${textoStatus}
                    </td>
                `;
                corpoTabela.appendChild(tr);
            });
        }

        // Filtros da análise
        document.getElementById('filtro-area').addEventListener('change', aplicarFiltros);
        document.getElementById('filtro-operadora').addEventListener('change', aplicarFiltros);
        document.getElementById('filtro-node').addEventListener('input', aplicarFiltros);

        function aplicarFiltros() {
            const areaFiltro = document.getElementById('filtro-area').value;
            const operadoraFiltro = document.getElementById('filtro-operadora').value;
            const nodeFiltro = document.getElementById('filtro-node').value.toLowerCase();
            
            const dadosFiltrados = baseDados.filter(item => {
                return (!areaFiltro || item.area === areaFiltro) &&
                       (!operadoraFiltro || item.operadora === operadoraFiltro) &&
                       (!nodeFiltro || item.node.toLowerCase().includes(nodeFiltro));
            });
            
            preencherTabela(dadosFiltrados);
        }

        // Gráficos do Dashboard
        function inicializarGraficos() {
            // Gráfico de distribuição por área
            const contextoArea = document.getElementById('grafico-area').getContext('2d');
            const contagemAreas = {};
            baseDados.forEach(item => {
                contagemAreas[item.area] = (contagemAreas[item.area] || 0) + 1;
            });
            
            new Chart(contextoArea, {
                type: 'doughnut',
                data: {
                    labels: Object.keys(contagemAreas),
                    datasets: [{
                        data: Object.values(contagemAreas),
                        backgroundColor: ['#2e7d32', '#4caf50', '#81c784', '#a5d6a7', '#c8e6c9']
                    }]
                },
                options: {
                    responsive: true,
                    plugins: {
                        legend: {
                            position: 'bottom'
                        }
                    }
                }
            });
            
            // Gráfico de consultas por período
            const contextoTempo = document.getElementById('grafico-tempo').getContext('2d');
            new Chart(contextoTempo, {
                type: 'line',
                data: {
                    labels: ['Jan', 'Fev', 'Mar', 'Abr', 'Mai', 'Jun', 'Jul', 'Ago', 'Set', 'Out', 'Nov', 'Dez'],
                    datasets: [{
                        label: 'Consultas',
                        data: [120, 190, 300, 500, 200, 300, 400, 480, 362, 540, 380, 290],
                        borderColor: '#2e7d32',
                        backgroundColor: 'rgba(46, 125, 50, 0.1)',
                        tension: 0.4,
                        fill: true
                    }]
                },
                options: {
                    responsive: true,
                    scales: {
                        y: {
                            beginAtZero: true
                        }
                    }
                }
            });
        }

        // Exportação
        document.getElementById('botao-exportar-csv').addEventListener('click', function() {
            alert('Funcionalidade de exportação CSV em desenvolvimento');
        });

        document.getElementById('botao-exportar-pdf').addEventListener('click', function() {
            alert('Funcionalidade de exportação PDF em desenvolvimento');
        });

        // Inicialização
        document.addEventListener('DOMContentLoaded', function() {
            preencherTabela();
            inicializarGraficos();
        });
    </script>
</body>
</html>
